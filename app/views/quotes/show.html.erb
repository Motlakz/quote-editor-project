<main class="container">
  <header class="header">
    <%= link_to sanitize("&larr; Back to quotes"), quotes_path, class: "btn btn-primary mb-3" %>
  </header>
  <section>
    <h1>
      <%= @quote.title %>
    </h1>
    <p><%= @quote.body %></p>
    <ul>
      <li><%= link_to "Edit", edit_quote_path(@quote), class: "btn btn-secondary me-2" %></li>
      <li>
        <%= link_to "Delete", quote_path(@quote), method: :delete, data: {
              confirm: "Are you sure you want to delete this quote?",
              turbo_frame: "quotes"
            }, class: "btn btn-danger" %>
      </li>
    </ul>
  </section>
</main>
